# Crawly - Corporate Database Scraper Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# SCRAPING CONFIGURATION
# ============================================================================

# Request configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2
USER_AGENT="Crawly/1.0 (+https://impactradar.com/bot)"

# Rate limiting (requests per second)
RATE_LIMIT=2
CONCURRENT_REQUESTS=5

# ============================================================================
# PROXY CONFIGURATION (Optional)
# ============================================================================

# HTTP/HTTPS proxy for requests
# PROXY_HTTP=http://proxy.example.com:8080
# PROXY_HTTPS=https://proxy.example.com:8443

# Proxy authentication (if required)
# PROXY_USERNAME=
# PROXY_PASSWORD=

# ============================================================================
# DATABASE/STORAGE CONFIGURATION
# ============================================================================

# Output format (json, jsonl, csv)
OUTPUT_FORMAT=json

# Output directory for scraped data
OUTPUT_DIR=./data/output

# Temporary/cache directory
CACHE_DIR=./data/cache

# ============================================================================
# TARGET CONFIGURATION
# ============================================================================

# Comma-separated list of target databases/sites to scrape
SCRAPE_TARGETS=

# Target-specific authentication (example structure)
# TARGET_API_KEY_1=
# TARGET_USERNAME_1=
# TARGET_PASSWORD_1=

# ============================================================================
# MICROSERVICE INTEGRATION
# ============================================================================

# Downstream service endpoint (where to send normalized JSON)
DOWNSTREAM_SERVICE_URL=http://localhost:8080/api/ingest

# API key for downstream service authentication
DOWNSTREAM_API_KEY=

# Retry configuration for downstream service
DOWNSTREAM_MAX_RETRIES=5
DOWNSTREAM_TIMEOUT=10

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty for stdout only)
LOG_FILE=

# Enable JSON structured logging
JSON_LOGGING=false

# ============================================================================
# ENVIRONMENT
# ============================================================================

# Environment name (development, staging, production)
ENVIRONMENT=development

# Enable debug mode (more verbose output, disable in production)
DEBUG=false
